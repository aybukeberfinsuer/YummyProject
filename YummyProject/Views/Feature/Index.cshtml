@model List<YummyProject.Models.Feature>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Features</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Title</th>
        <th>Description</th>
        <th>Remove</th>
        <th>Update</th>
    </tr>

    @foreach(var item in Model)
            {
                <tr>
                    <th>
                    @item.FeatureId</th>
                    <td>
                    <img src="@item.ImageUrl" style="width:50px; height:50px;" /></td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td> <a href="/Feature/RemoveFeature/@item.FeatureId" class="btn btn-danger">Remove</a>    </td>
                    <td> <a href="#" class="btn btn-warning">Update</a>    </td>
                    
                </tr>
            }

</table>
<br />
<a href="/Feature/AddFeature" class="btn btn-primary">Add</a>

