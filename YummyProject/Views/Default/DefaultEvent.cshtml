@model List<YummyProject.Models.Event>




<div class="swiper-wrapper">

    @foreach (var item in Model)
    {
        <div class="swiper-slide event-item d-flex flex-column justify-content-end" style="background-image: url(@item.ImageUrl)">
            <h3>@item.Title</h3>
            <div class="price align-self-start">$@item.Price</div>
            <p class="description">
               @item.Description
            </p>
        </div><!-- End Event item -->

    }



</div>
