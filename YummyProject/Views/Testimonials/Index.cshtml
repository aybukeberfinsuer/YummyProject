@model List<YummyProject.Models.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<h2>Index</h2>

<!-- Hata Mesajı -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Başarı Mesajı -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Image </th>
            <th>Name Surname</th>
            <th>Title</th>
            <th>Comment</th>
            <th>Rating</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td><img src="@item.ImageUrl" style="width:200px; height:200px" alt="Project Image" /></td>
                    <td>@item.NameSurname</td>
                    <td>@item.Title</td>
                    <td>@item.Comment</td>
                    <td>@item.Rating</td>
                    <td><a href="/Testimonials/Delete/@item.TestimonialId" class="btn btn-outline-danger">Delete</a></td>
                    <td><a href="/Testimonials/Update/@item.TestimonialId" class="btn btn-outline-warning">Update</a></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No events available.</td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/Testimoniala/Create" class="btn btn-primary">Add new testimonial comment!</a>
