@model List<YummyProject.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int project_count = 0;
}

<h2>Products</h2>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Image</th>
            <th>Product Name</th>
            <th>Ingredients</th>
            <th>Price</th>
            <th>Category</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            project_count++;
            <tr>
                <td> @project_count </td>
                <td>
                    <img src="@item.ImageUrl" alt="@item.Productname" width="100" />
                </td>
                <td> @item.Productname </td>
                <td> @item.Ingredients </td>
                <td> @item.Price </td>
                <td> @item.Category.CategoryName </td>
                <td> <a href="/Product/Delete/@item.ProductId" class="btn btn-outline-danger">Delete</a></td>
                <td> <a href="/Product/Update/@item.ProductId" class="btn btn-outline-warning">Update</a></td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/Product/Create" class="btn btn-primary"> Add new product</a>