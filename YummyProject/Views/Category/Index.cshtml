@model List<YummyProject.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int project_count = 0;
}

<h2>Category</h2>

<!-- Hata Mesajı -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Başarı Mesajı -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            project_count++;
            <tr>
                <td> @project_count </td>

                <td> @item.CategoryName </td>

                <td> <a href="/Category/Delete/@item.CategoryId" class="btn btn-outline-danger">Delete</a></td>
                <td> <a href="/Category/Update/@item.CategoryId" class="btn btn-outline-warning">Update</a></td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/Category/Create" class="btn btn-primary"> Add new category</a>

